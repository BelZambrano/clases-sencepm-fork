@startuml
skinparam monochrome true

class Bibliotecario {
  +id: String
  +nombre: String
  -email: String
  +validarPrestamo(): boolean
  +ordenarLibro(): void
}

class PersonalLimpieza {
  +id: String
  +nombre: String
  +limpiar(): void
}

class Libro {
  +isbn: String
  +titulo: String
  +autor: String
  -estado: EstadoLibro
  +prestar(): void
  +devolver(): void
}

class Prestamo {
  +id: String
  -fechaPrestamo: Date
  -fechaDevolucion: Date
  -diasPlazo: int
  -multaPorDia: double
  +calcularMulta(): double
  +estaVencido(): boolean
}

class Multa {
  +id: String
  -monto: double
  -fecha: Date
  +pagar(): void
}

class Lector {
  +id: String
  +nombre: String
  +deuda: double
  +registrarPrestamo(): void
}

class Donacion {
  +id: String
  +fecha: Date
  +procesar(): void
}

enum EstadoLibro {
  DISPONIBLE
  PRESTADO
  MANTENIMIENTO
}

